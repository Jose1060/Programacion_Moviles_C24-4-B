<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E111C"
    tools:context=".datos">

    <LinearLayout
        android:id="@+id/frmTiempo"
        android:layout_width="356dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtTitulo"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="245dp"
        android:background="@drawable/shape_button"
        android:backgroundTint="#A5A2A2"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Tiempo"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTiempo"
            style="@android:style/Widget.Material.AutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button"
            android:backgroundTint="#025965"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtTitulo"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/shape_button"
        android:backgroundTint="#A5A2A2"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Temperatura"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTemperatura"
            style="@android:style/Widget.Material.AutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button"
            android:backgroundTint="#025965"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="192dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/shape_button"
        android:backgroundTint="#90CEEA"
        android:gravity="center"
        android:text="Configuracion"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtTitulo"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/shape_button"
        android:backgroundTint="#A5A2A2"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Ciudad"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editCiudad"
            style="@android:style/Widget.Material.AutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button"
            android:backgroundTint="#025965"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="365dp"
        android:layout_height="97dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="32dp">

        <Button
            android:id="@+id/btnCancelar"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="51dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="25dp"
            android:layout_toStartOf="@+id/btnAceptar"
            android:background="@drawable/shape_button"
            android:backgroundTint="#5CE0F1"
            android:gravity="center"
            android:text="Cancelar" />

        <Button
            android:id="@+id/btnAceptar"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/shape_button"
            android:backgroundTint="#5CE0F1"
            android:gravity="center"
            android:text="Aceptar"
            tools:text="Aceptar" />
    </RelativeLayout>

</RelativeLayout>